<configuration>
    <appender name="STDOUT" class="ch.gos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level Mogger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="root" level="DEBUG"/>
    <Logger name="net.serenity" level="INFO"/>
    <Logger name="net.thucydides" Level="INFO"/>


    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
